---
interface Props {
  className?: string;
  animation?: string;
  delay?: number;
}

const { className = "", animation = "fade-in", delay = 0 } = Astro.props;
---

<div class={`glass-container ${className}`} data-animate={animation} data-delay={delay}>
  <slot />
</div>

<style>
  .glass-container {
    position: relative;
    background: rgba(var(--card-bg), 0.2);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: var(--card-shadow);
    border-radius: 16px;
    overflow: hidden;
    padding: 2rem;
  }
</style> 