---
interface Props {
  title: string;
  color: string;
  second_color: string;
}

const { color, title, second_color } = Astro.props;
---

<div
  class="skill-card glass"
  style={`--card-color:${color}; --card-secondary:${second_color}`}
  data-animate="fade-in"
>
  <div class="skill-content">
    <h3>{title}</h3>
  </div>
</div>

<style>
  .skill-card {
    list-style: none;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
    margin-right: 1rem;
    margin-bottom: 1rem;
    transition: var(--transition-fast);
  }

  .skill-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      var(--card-color),
      var(--card-secondary) 70%
    );
    opacity: 0.15;
    transition: opacity 0.3s ease;
    z-index: -1;
  }

  .skill-content {
    padding: 0.8rem 1.2rem;
    background-color: rgba(var(--card-bg), 0.3);
    backdrop-filter: var(--glass-blur);
    -webkit-backdrop-filter: var(--glass-blur);
  }

  h3 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .skill-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.15);
  }

  .skill-card:hover::before {
    opacity: 0.25;
  }

  .skill-card:hover h3 {
    color: var(--card-color);
  }
</style>
