---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="card glass" data-animate="fade-in">
  <a href={href} target="_blank" class="card-content">
    <h2>
      {title}
      <span class="arrow">&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>

<style>
  .card {
    list-style: none;
    display: flex;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: var(--accent-gradient);
    background-size: 300%;
    background-position: 0% 0%;
    opacity: 0;
    transition:
      opacity 0.6s ease,
      background-position 0.6s ease;
    z-index: -1;
  }

  .card-content {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1.5rem;
    color: rgb(var(--text));
    backdrop-filter: blur(4px);
    border-radius: inherit;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .arrow {
    transition: transform 0.3s ease;
    display: inline-block;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: rgba(var(--text), 0.9);
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card:hover::before {
    background-position: 100% 100%;
    opacity: 0.15;
  }

  .card:hover .arrow {
    transform: translateX(5px);
  }

  .card:hover h2 {
    color: rgb(var(--accent));
  }
</style>
