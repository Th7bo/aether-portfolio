---
import Layout from "../layouts/Layout.astro";
import ContactCard from "../components/ContactCard.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Thibo | Contact">
  <Navigation activeLink="/contact" />

  <main>
    <section class="contact-header" data-animate="fade-in">
      <h1>Get in <span class="text-gradient">Touch</span></h1>
      <p class="contact-intro">
        Feel free to reach out for collaboration opportunities, questions about
        my projects, or just to say hello!
      </p>
    </section>

    <section
      class="contact-section glass"
      data-animate="fade-in"
      data-delay="0.2"
    >
      <h2><span class="dollar">$</span> contact methods</h2>
      <p>Here's how you can reach me directly:</p>

      <div class="contact-methods">
        <ContactCard
          color="#95a0ff"
          second_color="#6870b6"
          platform="Discord"
          name=".th7"
          link="https://discordapp.com/users/350275136206667777"
        />
        <ContactCard
          color="#ff9597"
          second_color="#bd6e70"
          platform="Mail"
          name="me@th7bo.dev"
          link="mailto:me@th7bo.dev"
        />
      </div>

      <div class="contact-info">
        <h3>Quick Response</h3>
        <p>I usually respond within 24-48 hours. Please include:</p>
        <ul class="contact-list">
          <li>A clear subject line</li>
          <li>Details about your project/inquiry</li>
          <li>Any relevant deadlines</li>
        </ul>
      </div>
    </section>

    <section
      class="socials-section glass"
      data-animate="fade-in"
      data-delay="0.4"
    >
      <h2><span class="dollar">$</span> find me online</h2>
      <p>Connect with me on these platforms:</p>

      <div class="socials-grid">
        <ContactCard
          color="#95afff"
          second_color="#7185c1"
          platform="Steam"
          name="Th7boooo"
          link="https://steamcommunity.com/id/Th7boooo"
        />
        <ContactCard
          color="#afb3bf"
          second_color="#999ca4"
          platform="GitHub"
          name="Th7bo"
          link="https://github.com/Th7bo"
        />
        <ContactCard
          color="#b6ff95"
          second_color="#84b96c"
          platform="Minecraft"
          name="Th7bo"
          link=""
        />
        <ContactCard
          color="#fb6f73"
          second_color="#c1585b"
          platform="Youtube"
          name="Th7bo"
          link="https://www.youtube.com/@Th7bo"
        />
        <ContactCard
          color="#be95ff"
          second_color="#9173c1"
          platform="Twitch"
          name="ThiboV2"
          link="https://www.twitch.tv/thibov2"
        />
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    box-sizing: border-box;
    padding-top: 2rem;
  }

  .contact-header {
    text-align: center;
    max-width: 800px;
    margin: 2rem auto 2rem;
    padding: 0 1rem;
  }

  .contact-header h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1rem;
  }

  .contact-intro {
    font-size: 1.2rem;
    color: rgba(var(--text), 0.8);
    margin: 0 auto;
    max-width: 60ch;
  }

  .contact-section,
  .socials-section {
    padding: 2.5rem;
    border-radius: 16px;
    width: 100%;
    box-sizing: border-box;
    margin: 0 auto;
  }

  section {
    padding: 2.5rem;
    border-radius: 16px;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    box-sizing: border-box;
  }

  section h2 {
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .contact-grid {
    display: none;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
    margin-bottom: 2rem;
    width: 100%;
  }

  .socials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    margin-top: 1.5rem;
    width: 100%;
  }

  .contact-info {
    padding: 1.5rem;
    background: rgba(var(--card-bg), 0.3);
    border-radius: 12px;
    border: 1px solid rgba(var(--accent), 0.1);
    margin-top: 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .contact-info h3 {
    font-size: 1.3rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: rgb(var(--accent));
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0;
  }

  .contact-list li {
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    position: relative;
    padding-left: 1.2rem;
  }

  .contact-list li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: rgb(var(--accent));
  }

  .about-content {
    margin-top: 1.5rem;
  }

  .skills-list h3 {
    font-size: 1.3rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: rgb(var(--accent));
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    list-style: none;
    padding: 0;
    margin: 1rem 0;
  }

  .tech-tag {
    display: inline-block;
    padding: 0.5rem 0.8rem;
    background: rgba(var(--accent), 0.15);
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .collaborate-text {
    margin-top: 1.5rem;
    font-style: italic;
    color: rgba(var(--text), 0.8);
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
      padding-top: 1rem;
    }

    .contact-section,
    .socials-section {
      padding: 1.5rem;
    }

    .socials-grid {
      grid-template-columns: 1fr;
    }

    .contact-header {
      margin-top: 4rem;
      margin-bottom: 1rem;
    }
  }
</style>
