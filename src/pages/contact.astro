              color="#afb3bf"
              second_color="#999ca4"
              platform="GitHub"
              name="Th7bo"
              link="https://github.com/Th7bo"
            />
            <ContactCard
              color="#b6ff95"
              second_color="#84b96c"
              platform="Minecraft"
              name="Th7bo"
              link=""
            />
